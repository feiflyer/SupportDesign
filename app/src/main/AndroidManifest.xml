<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fast.flyer.com.supportdesign" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ToolBarActivity"
            android:label="@string/title_activity_tool_bar"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".CoordinatorLayoutActivity" >
        </activity>
        <activity
            android:name=".AppBarLayoutActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".CollapsingToolbarLayoutActivity"
            android:label="@string/title_activity_collapsing_toolbar_layout"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
